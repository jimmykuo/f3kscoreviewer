<script id="pilot-list-template" type="text/html">
    <div class="well">
    <h1>Pilot list</h1>
    <table id="pilot-list" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>Country</th>
                <th>FAI Number</th>
                <th>Club</th>
            </tr>
        </thead>
        <tbody>
            {{#.}}
            <tr>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{country}}</td>
                <td>{{faiNumber}}</td>
                <td>{{club}}</td>
            </tr>
            {{/.}}
        </tbody>
    </table>
    </div>
</script>

<script id="task-list-template" type="text/html">
    <div class="well">
    <h1>Task list</h1>
    <table id="task-list" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Task</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
            <tbody>
                {{#.}}
                <tr>
                    <td>{{letter}}</td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                </tr>
                {{/.}}
            </tbody>
    </table>
    </div>
</script>

<script id="flightmatrix-template" type="text/html">
    <div class="well">
    <h1>Flight matrix</h1>
    <table id="flightmatrix-list" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                {{#rounds}}
                <th>{{round}}</th>
                {{/rounds}}
            </tr>
        </thead>
        <tbody>
            {{#pilots}}
            <tr>
                <td>{{firstName}} {{lastName}}</td>
                {{#flightGroups}}
                <td class="number">{{group}}</td>
                {{/flightGroups}}
            </tr>
            {{/pilots}}
        </tbody>
    </table>
    </div>
</script>

<script id="detail-template" type="text/html">
    <div class="well">
    <h1>Detailed score</h1>
    {{#.}}    
    <h2>Round {{id}} - {{task.name}}</h1>
    <table id="detail-list-round-{{id}}" class="table table-striped table-bordered table-condensed">
    {{#groups}}
    <tr>
        <th>Group {{id}}</th>
        {{#timesWidth}}
        <th>t: {{.}}</th>
        {{/timesWidth}}
        <th>Total</th>
        <th>Score</th>
        <th>Penalty</th>
    </tr>
    {{#scorePilots}}
        <tr>
            <td>{{firstName}} {{lastName}}</td>
            {{#times.times}}
            <td class="number">{{.}}</td>
            {{/times.times}}
            <td class="number">{{times.totalTime}}</td>
            <td class="number">{{score.score}}</td>
            <td class="number">{{score.penalty}}</td>    
        </tr>
    {{/scorePilots}}
    {{/groups}}
    </table>
    {{/.}}
    </div>
</script>

<script id="score-template" type="text/html">
    <div class="well">
        <h1>Score</h1>
        <table id="score-list" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Name</th>
                    {{#rounds}}
                    <th>{{.}}</th>
                    {{/rounds}}
                    <th>Penalty/Round</th>
                    <th>Score</th>
                    <th>%</th> 
                </tr>
            </thead>
            <tbody>
                {{#pilots}}
                <tr>
                    <td class="number">{{rank}}</td>
                    <td>{{firstName}} {{lastName}}</td> 
                    {{#totalScores}}
                    <td class="number"><span class="scrap_{{scrapped}}">{{score}}</span></td>
                    {{/totalScores}}
                    <td class="number">{{penalty}}</td>
                    <td class="number">{{totalScore}}</td>
                    <td class="number">{{totalPercent}}</td> 
                </tr>
                {{/pilots}}
            </tbody>    
        </table>    
    </div>
</script>

<script id="start-template" type="text/html">
    <div class="well">
        <h1>Start list</h1>
        {{#.}}
        <h2>Round {{id}} - {{task.name}}</h2>
            <ul class="thumbnails">
            {{#groups}}
            <li class="span3">
            <table id="start-list" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr><th>Group {{id}}</th></tr> 
                </thead>
                <tbody>
                    {{#pilots}}
                        <tr><td>{{firstName}} {{lastName}}</td></tr>
                    {{/pilots}}
                </tbody>
            </table> 
            </li>   
            {{/groups}}
            </ul>    
        {{/.}}             
    </div>
</script>

<script id="name-template" type="text/html">
<div class="row">
    <div class="span10">
        <h1>{{name}}</h1>
    </div>
    <div class="span2">
        <div class="btn-group">
            <button class="btn"><i class="icon-home"></i></button>
            <button class="btn"><i class="icon-print"></i></button>
        </div>
    </div>
</div>
<p/>
</script>

<div class="hero-unit">    
    <h1>F3K Score Viewer</h1>
    <p>Import an F3KScore xml file, and examine the contest.</p>
</div>

