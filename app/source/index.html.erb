<script id="competitor-list-template" type="text/html">
    <div class="well">
    <h1>Pilot list</h1>
    <table id="competitor-list" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>Country</th>
                <th>FAI Number</th>
                <th>Club</th>
            </tr>
        </thead>
        <tbody>
            {{#competitors}}
            <tr>
                <td>{{name}}</td>
                <td>{{lastName}}</td>
                <td>{{country}}</td>
                <td>{{faiNumber}}</td>
                <td>{{club}}</td>
            </tr>
            {{/competitors}}
        </tbody>
    </table>
    </div>
</script>

<script id="task-list-template" type="text/html">
    <div class="well">
    <h1>Task list</h1>
    <dl id="task-list">
            {{#tasks}}
            <dt>{{name}}</dt>
            <dd>{{longName}}</dd>
            {{/tasks}}
    </dl>
    </div>
</script>

<script id="flightmatrix-template" type="text/html">
    <div class="well">
    <h1>Flight matrix</h1>
    <table id="flightmatrix-list" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                {{#rounds}}
                <th>{{roundNumber}}</th>
                {{/rounds}}
            </tr>
        </thead>
        <tbody>
            {{#matrix}}
            <tr>
                <td>{{name}}</td>
                {{#groups}}
                <td class="number">{{group}}</td>
                {{/groups}}
            </tr>
            {{/matrix}}
        </tbody>
    </table>
    </div>
</script>

<script id="detail-template" type="text/html">
    <div class="well">
    <h1>Detailed score</h1>
    {{#rounds}}    
    <h2>Round {{roundNumber}} - {{roundName}}</h1>
    <table id="detail-list-round-{{roundNumber}}-group-{{groupNumber}}" class="table table-striped table-bordered table-condensed">
    {{#groups}}
    <tr>
        <th>Group {{groupNumber}}</th>
        {{#flights}}
        <th>time {{time}}</th>
        {{/flights}}
        <th>Total</th>
        <th>Score</th>
        <th>Penalty</th>
    </tr>
    {{#pilots}}
        <tr>
            <td>{{name}}</td>
            {{#flights}}
            <td class="number">{{time}}</td>
            {{/flights}}
            <td class="number">{{total}}</td>
            <td class="number">{{score}}</td>
            <td class="number">{{penalty}}</td>    
        </tr>
    {{/pilots}}
    {{/groups}}
    </table>
    {{/rounds}}
    </div>
</script>

<script id="score-template" type="text/html">
    <div class="well">
        <h1>Score</h1>
        <table id="score-list" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Name</th>
                    {{#rounds}}
                    <th>{{roundNumber}}</th>
                    {{/rounds}}
                    <th>Penalty/Round</th>
                    <th>Score</th>
                    <th>%</th> 
                </tr>
            </thead>
            <tbody>
                {{#pilots}}
                <tr>
                    <td class="number">{{rank}}</td>
                    <td>{{name}}</td> 
                    {{#rounds}}
                    <td class="number"><span class="scrap_{{scrapped}}">{{score}}</span></td>
                    {{/rounds}}
                    <td class="number">{{penalty}}</td>
                    <td class="number">{{score}}</td>
                    <td class="number">{{percent}}</td> 
                </tr>
                {{/pilots}}
            </tbody>    
        </table>    
    </div>
</script>

<script id="start-template" type="text/html">
    <div class="well">
        <h1>Start list</h1>
        {{#rounds}}
        <h2>Round {{roundNumber}} - {{roundName}}</h2>
            <ul class="thumbnails">
            {{#groups}}
            <li class="span3">
            <table id="start-list" class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr><th>Group {{groupNumber}}</th></tr> 
                </thead>
                <tbody>
                    {{#pilots}}
                        <tr><td>{{name}}</td></tr>
                    {{/pilots}}
                </tbody>
            </table> 
            </li>   
            {{/groups}}
            </ul>    
        {{/rounds}}             
    </div>
</script>

<script id="name-template" type="text/html">
<div class="row">
    <div class="span10">
        <h1>{{name}}</h1>
    </div>
    <div class="span2">
        <div class="btn-group">
            <button class="btn"><i class="icon-home"></i></button>
            <button class="btn"><i class="icon-print"></i></button>
        </div>
    </div>
</div>
<p/>
</script>

<div class="hero-unit">    
    <h1>F3K Score Viewer</h1>
    <p>Import an F3KScore xml file, and examine the contest.</p>
</div>

<div id="menu">
<ul class="thumbnails">
  <li class="span6">
    <div class="thumbnail">
        <div class="caption">
            <input id="_f3kscorefile" type="file" style="display:none">
            <div class="input-prepend input-append">
                <span class="add-on">Load a file from disk</span><input id="f3kscorefile" class="span2" type="text" placeholder="Browse to a f3k.xml file" /><button class="btn btn-primary" type="button" onclick="$('input[id=_f3kscorefile]').click();"><i class="icon-file icon-white"></i> Browse</button>
            </div>
        </div>
    </div>
  </li>
  <li class="span6">
    <div class="thumbnail">
        <div class="caption">
            <div class="input-prepend input-append dropdown">
                <span id="f3kscoreurltitle" class="add-on">Examine a Belgian contest</span><input type="text" id="f3kscoreurl" class="span2" placeholder="Click and choose contest" /><button class="btn btn-primary" type="button"><i class="icon-eye-open icon-white"></i> Examine</button>
            </div>
            <ul class="dropdown-menu" id="f3kscoreurlselect">
                <li><a href="#" data-value="x">AAAAAA</a></li>
                <li><a href="#" data-value="y">BBBBBB</a></li>
            </ul>
        </div>
    </div>
  </li>
</ul>
</div>

<div id="contest">

<div id="name"></div>

<ul class="nav nav-tabs" id="report" data-tabs="tabs">
  <li class="active"><a href="#score" data-toggle="tab">Score</a></li>
  <li><a href="#competitors" data-toggle="tab">Competitors</a></li>
  <li><a href="#tasks" data-toggle="tab">Tasks</a></li>
  <li><a href="#flightmatrix" data-toggle="tab">Flight matrix</a></li>
  <li><a href="#detail" data-toggle="tab">Detailed score</a></li>
  <li><a href="#start" data-toggle="tab">Start list</a></li>
</ul>

